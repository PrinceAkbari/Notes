<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BackupScreen">

    <RelativeLayout
        android:id="@+id/lytoolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/yellow"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="35sp"
            android:orientation="vertical"
            android:id="@+id/back_backup"
            android:layout_alignParentBottom="true"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="18sp"
                android:layout_height="14sp"
                android:layout_centerInParent="true"
                android:background="@drawable/ic_back"
                tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />
        </RelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="16sp"
            android:textColor="@color/brown"
            android:gravity="center"
            android:layout_marginStart="58sp"
            android:textStyle="bold"
            android:id="@+id/text"
            android:text="Backup"/>


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/lytoolbar"
        android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginHorizontal="25sp"
        android:layout_marginTop="10sp"
        android:id="@+id/backup"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_marginHorizontal="10sp"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="30sp"
                android:layout_height="30sp"
                android:layout_gravity="center"
                android:src="@drawable/backup"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="5sp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="10sp"
                    android:gravity="center"
                    android:text="Local backup notes"
                    android:textColor="#000000"
                    android:textSize="15sp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textColor="@color/grey1"
                    android:gravity="center"
                    android:layout_marginStart="10sp"
                    android:text="Backup your notes to phone storage offline"
                    android:textSize="10sp"/>

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginHorizontal="15sp"
        android:layout_below="@+id/backup"
        android:layout_marginTop="12sp"

        android:background="#C7C7C7" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginHorizontal="25sp"
        android:layout_marginTop="15sp"
        android:id="@+id/email"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_marginHorizontal="10sp"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="30sp"
                android:layout_height="30sp"
                android:layout_gravity="center"
                android:src="@drawable/email"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="5sp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="10sp"
                    android:gravity="center"
                    android:text="Send backup via email"
                    android:textColor="#000000"
                    android:textSize="15sp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textColor="@color/grey1"
                    android:gravity="center"
                    android:layout_marginStart="10sp"
                    android:text="Backup your notes via email"
                    android:textSize="10sp"/>

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginHorizontal="15sp"
        android:layout_below="@+id/backup"
        android:layout_marginTop="15sp"
        android:background="#C7C7C7" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginHorizontal="25sp"
            android:layout_marginTop="15sp"
            android:id="@+id/restore"
            android:layout_height="wrap_content">


            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_marginHorizontal="10sp"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="30sp"
                    android:layout_height="30sp"
                    android:layout_gravity="center"
                    android:src="@drawable/restor"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="5sp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginStart="10sp"
                        android:gravity="center"
                        android:text="Restore notes from local"
                        android:textColor="#000000"
                        android:textSize="15sp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textColor="@color/grey1"
                        android:gravity="center"
                        android:layout_marginStart="10sp"
                        android:text="/storage/emulated/0/document/tidy Notes_backup"
                        android:textSize="10sp"/>

                </LinearLayout>


            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</RelativeLayout>