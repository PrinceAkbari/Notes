<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:background="@color/grey"
    android:layout_height="match_parent"
    tools:context=".LockScreen">

    <RelativeLayout
        android:id="@+id/lytoolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/yellow"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/backlock"
            android:layout_width="18sp"
            android:layout_height="14sp"
            android:layout_centerVertical="true"
            android:layout_marginStart="10sp"
            android:background="@drawable/ic_back"
            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="16sp"
            android:textColor="@color/brown"
            android:gravity="center"
            android:layout_marginStart="48sp"
            android:textStyle="bold"
            android:id="@+id/text"
            android:text="Lock "/>


    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lytoolbar"
        android:orientation="vertical">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_marginHorizontal="5sp"
            app:cardCornerRadius="10sp"
            android:layout_marginTop="15sp"
            android:layout_height="60sp">


            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/languageLayout"
                android:background="#FFFDF5"
                android:layout_marginHorizontal="10sp"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="20sp"
                    android:layout_height="20sp"
                    android:layout_gravity="center"
                    android:src="@drawable/lock"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="5sp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="10sp"
                    android:gravity="center"
                    android:text="App Lock"
                    android:textColor="#000000"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textColor="@color/grey1"
                    android:gravity="center"
                    android:layout_marginStart="10sp"
                    android:text="Set a password to protect your notes"
                    android:textSize="10sp"/>
            </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <Switch
                        android:id="@+id/SwitchAppLock"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:thumbTint="@color/sbtn"
                        android:layout_centerInParent="true"
                        android:layout_alignParentEnd="true"
                        android:trackTint="@color/sbtn1" />
                </RelativeLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_marginHorizontal="5sp"
            app:cardCornerRadius="10sp"
            android:id="@+id/setpass"
            android:layout_marginTop="15sp"
            android:layout_height="60sp">


            <LinearLayout
                android:layout_width="match_parent"
                android:background="#FFFDF5"
                android:orientation="horizontal"
                android:layout_marginHorizontal="10sp"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="20sp"
                    android:layout_height="20sp"
                    android:layout_gravity="center"
                    android:src="@drawable/lock"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="5sp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textColor="#000000"
                        android:gravity="center"
                        android:layout_marginStart="10sp"
                        android:text="Set password"
                        android:textSize="15sp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textColor="@color/grey1"
                        android:gravity="center"
                        android:layout_marginStart="10sp"
                        android:text="Set or change password"
                        android:textSize="10sp"/>
                </LinearLayout>


            </LinearLayout>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_marginHorizontal="5sp"
            app:cardCornerRadius="10sp"
            android:layout_marginTop="15sp"
            android:layout_height="60sp">


            <LinearLayout
                android:layout_width="match_parent"
                android:background="#FFFDF5"
                android:orientation="horizontal"
                android:layout_marginHorizontal="10sp"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="20sp"
                    android:layout_height="20sp"
                    android:layout_gravity="center"
                    android:src="@drawable/security"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="5sp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textColor="#000000"
                        android:gravity="center"
                        android:layout_marginStart="10sp"
                        android:text="Set security question"
                        android:textSize="15sp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textColor="@color/grey1"
                        android:gravity="center"
                        android:layout_marginStart="10sp"
                        android:text="It will be used in case of password forgetting"
                        android:textSize="10sp"/>
                </LinearLayout>


            </LinearLayout>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_marginHorizontal="5sp"
            app:cardCornerRadius="10sp"
            android:layout_marginTop="15sp"
            android:layout_height="60sp">


            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:background="#FFFDF5"
                android:layout_marginHorizontal="10sp"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="20sp"
                    android:layout_height="20sp"
                    android:layout_gravity="center"
                    android:src="@drawable/fingerprint"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textColor="#000000"
                        android:gravity="center"
                        android:layout_marginStart="10sp"
                        android:text="Set Fingerprint"
                        android:textSize="15sp"/>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <Switch
                        android:id="@+id/SwitchFingerprint"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:thumbTint="@color/sbtn"
                        android:layout_centerInParent="true"
                        android:layout_alignParentEnd="true"
                        android:trackTint="@color/sbtn1" />
                </RelativeLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_marginHorizontal="5sp"
            app:cardCornerRadius="10sp"
            android:layout_marginTop="15sp"
            android:layout_height="60sp">


            <LinearLayout
                android:layout_width="wrap_content"
                android:background="#FFFDF5"
                android:orientation="horizontal"
                android:layout_marginHorizontal="10sp"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="20sp"
                    android:layout_height="20sp"
                    android:layout_gravity="center"
                    android:src="@drawable/facelock"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textColor="#000000"
                    android:gravity="center"
                    android:layout_marginStart="10sp"
                    android:text="Set Face lock"
                    android:textSize="15sp"/>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <Switch
                        android:id="@+id/SwitchFaceLock"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:thumbTint="@color/sbtn"
                        android:layout_centerInParent="true"
                        android:layout_alignParentEnd="true"
                        android:trackTint="@color/sbtn1" />
                </RelativeLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>


</RelativeLayout>