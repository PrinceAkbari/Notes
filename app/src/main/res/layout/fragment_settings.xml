<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F2F2"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".settingsFragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="General"
        android:textSize="16sp"
        android:layout_marginTop="10sp"
        android:textStyle="bold"
        android:layout_marginHorizontal="30sp"
        android:textColor="@color/black"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="20sp"
                android:id="@+id/languageLayout"
                android:layout_marginHorizontal="20sp"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="30sp"
                    android:layout_height="22dp"
                    android:layout_marginStart="10sp"
                    android:src="@drawable/langauge" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textColor="#333333"
                    android:layout_marginStart="20sp"
                    android:text="Language"
                    android:textSize="15sp"/>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:layout_alignParentEnd="true"
                        android:text="English"
                        android:textColor="@color/black"
                        android:textSize="15sp" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:id="@+id/Theme"
                android:layout_marginTop="25sp"
                android:layout_marginHorizontal="20sp"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="30sp"
                    android:layout_height="22dp"
                    android:layout_marginStart="10sp"
                    android:src="@drawable/theme" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textColor="#333333"
                    android:layout_marginStart="20sp"
                    android:text="Theme"
                    android:textSize="15sp"/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="25sp"
                android:id="@+id/fontsize"
                android:layout_marginHorizontal="20sp"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="30sp"
                    android:layout_height="22dp"
                    android:layout_marginStart="10sp"
                    android:src="@drawable/fontsize" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textColor="#333333"
                    android:layout_marginStart="20sp"
                    android:text="Font Size"
                    android:textSize="15sp"/>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:id="@+id/fonttextview"
                        android:layout_alignParentEnd="true"
                        android:text="100%"
                        android:textColor="@color/black"
                        android:textSize="15sp" />
         </RelativeLayout>
            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="15sp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Text"
        android:textSize="16sp"
        android:layout_marginTop="10sp"
        android:textStyle="bold"
        android:layout_marginHorizontal="30sp"
        android:textColor="@color/black"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="10sp"
                android:layout_marginHorizontal="20sp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textColor="#333333"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:layout_marginStart="20sp"
                    android:text="Show line count"
                    android:textSize="15sp"/>
                <CheckBox
                    android:layout_width="wrap_content"
                    android:id="@+id/checkbox1"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginHorizontal="20sp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textColor="#333333"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:layout_marginStart="20sp"
                    android:text="Make links and emails clickable"
                    android:textSize="15sp"/>
                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/checkbox2"
                    android:layout_gravity="end"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginHorizontal="20sp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textColor="#333333"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:layout_marginStart="20sp"
                    android:text="Use monospaced font"
                    android:textSize="15sp"/>
                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/checkbox3"
                    android:layout_gravity="end"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginHorizontal="20sp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textColor="#333333"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:layout_marginStart="20sp"
                    android:text="Use Incognito mode of keboards"
                    android:textSize="15sp"/>
                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/checkbox4"
                    android:layout_gravity="end"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginHorizontal="20sp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textColor="#333333"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:layout_marginStart="20sp"
                    android:text="Enable line wrap"
                    android:textSize="15sp"/>

                <CheckBox
                    android:id="@+id/checkbox5"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="end" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="10sp"
                android:id="@+id/alignment"
                android:layout_marginHorizontal="20sp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textColor="#333333"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:layout_marginStart="20sp"
                    android:text="Alignment"
                    android:textSize="15sp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Left"
                    android:id="@+id/alignmenttextview"
                    android:textColor="@color/black"
                    android:layout_marginEnd="10sp"
                    android:textSize="15sp"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="15sp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Saving"
        android:textSize="16sp"
        android:layout_marginTop="10sp"
        android:textStyle="bold"
        android:layout_marginHorizontal="30sp"
        android:textColor="@color/black"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="10sp"
                android:layout_marginHorizontal="20sp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textColor="#333333"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:layout_marginStart="20sp"
                    android:text="Autosave notes"
                    android:textSize="15sp"/>
                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/checkbox7"
                    android:layout_gravity="end"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="10sp"
                android:layout_marginHorizontal="20sp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textColor="#333333"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:layout_marginStart="20sp"
                    android:text="Display save success messages"
                    android:textSize="15sp"/>
                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/checkbox8"
                    android:layout_gravity="end"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="15sp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="About"
            android:textSize="16sp"
            android:layout_marginTop="10sp"
            android:textStyle="bold"
            android:layout_marginHorizontal="30sp"
            android:textColor="@color/black"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginTop="20sp"
                    android:layout_marginHorizontal="20sp"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="30sp"
                        android:layout_height="22dp"
                        android:layout_marginStart="10sp"
                        android:src="@drawable/feedback" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textColor="#333333"
                        android:layout_marginStart="20sp"
                        android:text="Feedback"
                        android:textSize="15sp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginTop="25sp"
                    android:layout_marginHorizontal="20sp"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="30sp"
                        android:layout_height="22dp"
                        android:layout_marginStart="10sp"
                        android:src="@drawable/shareapp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textColor="#333333"
                        android:layout_marginStart="20sp"
                        android:text="Share app"
                        android:textSize="15sp"/>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="15sp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>


        <View
            android:layout_width="match_parent"
            android:layout_height="55sp"/>
    </LinearLayout>


    </androidx.core.widget.NestedScrollView>
</RelativeLayout>
