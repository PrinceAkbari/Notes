<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RecycleBin">

    <RelativeLayout
        android:id="@+id/lytoolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/yellow"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/backrecyclebin"
            android:layout_width="18sp"
            android:layout_height="14sp"
            android:layout_centerVertical="true"
            android:layout_marginStart="10sp"
            android:background="@drawable/ic_back"
            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="16sp"
            android:gravity="center"
            android:textColor="@color/brown"
            android:layout_marginStart="48sp"
            android:textStyle="bold"
            android:id="@+id/text"
            android:text="Recycle Bin"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="23sp"
            android:id="@+id/delete"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="20sp"
            android:src="@drawable/delete" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_width="120sp"
            android:layout_height="120sp"
            android:layout_gravity="center"
            android:src="@drawable/delete1" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Recycle is empty ?"
            android:textSize="15sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Notes in recycle will be automatically deleted in 31 days."
            android:textSize="15sp" />
    </LinearLayout>

</RelativeLayout>